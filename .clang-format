# find . -type f \( -name "*.cpp" -o -name "*.hpp" -o -name "*.h" -o -name "*.cu" \) -exec clang-format -i {} +
BasedOnStyle: LLVM
IndentWidth: 4
ColumnLimit: 100
AllowShortFunctionsOnASingleLine: Inline
SortIncludes: true
SpacesInParentheses: false
SpaceAfterCStyleCast: true
BreakBeforeBraces: Attach